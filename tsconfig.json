{
  "compilerOptions": {
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "alwaysStrict": true
  },
  "lib": [ "esnext", "dom" ],
  "exclude": [
    "node_modules",
    "node_modules/*"
  ]
}
